<h1>Burgers</h1>

<h2>The Menu</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Already Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add burger</h2>
<form class="create-form">

  <div class="form-group">
    <label>Burger Name</label>
    <input type="text" name="name" id="burgerName">
  </div>

  <button type="submit">Add it to the menu</button>
</form>
