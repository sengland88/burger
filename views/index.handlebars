<div class="jumbotron">
  <h1 class="display-4">King Burger</h1>
  <p class="lead">Welcome to King Burger where we can do it your way ... but don't get crazy.</p>
  <hr class="my-4">
</div>

  <div class="row">

      
    <div class="col-sm">
        <h2>The Menu</h2>

        <ul>
        {{#each burgers}}
            {{#unless eaten}}
            {{> burgers/burger-block eaten=false}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>


    <div class="col-sm">
      <h2>Already Eaten</h2>

        <ul>
        {{#each burgers}}
            {{#if eaten}}
            {{> burgers/burger-block eaten=true}}
            {{/if}}
        {{/each}}
        </ul>
    </div>

  </div>

<h2>Add burger</h2>
<form class="create-form">

  <div class="form-group">
    <label>Burger Name</label>
    <input type="text" name="name" id="burgerName">
  </div>

  <button type="submit">Add it to the menu</button>
</form>
